/* pages/class/class.wxss */
page {
  background-color: #ccc;
  margin: 0;
  padding: 0;
}

.page {
  position: relative;
  height: 750rpx;
}

.number {
  width: 8%;
  margin-left: 3%;
  vertical-align: top;
}

.number > view {
  line-height: 125rpx;
}

.outerbox {
  margin: 40rpx 0;
  height: 250rpx;
  font-size: 18px;
}

.outerbox > view:nth-child(1) {
  display: inline-block;
  height: 250rpx;
}

.course_card {
  display: inline-flex;
  flex-wrap: wrap;
  justify-content: space-around;
  background: #eee;
  width: 85%;
  height: 250rpx;
  border-radius: 20rpx;
}

.course_card > view {
  width: 220rpx;
  text-align: left;
  padding-left: 50rpx;
  background-repeat: no-repeat;
  background-size: 18px 18px;
  background-position: 4px 3px;
  overflow: hidden;
}

.course_card > view:nth-child(1) {
  width: 100%;
  padding-top: 30rpx;
  padding-left: 80rpx;
  text-align: left;
}

.course_duration {
  background-image: url(http://tony-space.top/static/icon/time_blue.png);

}

.course_teacher {
  background-image: url(http://tony-space.top/static/icon/lecturer.png);
}

.course_place {
  background-image: url(http://tony-space.top/static/icon/locale.png);
}

.course_mark {
  background-image: url(http://tony-space.top/static/icon/subject.png);
}

.add {
  transition: all 0.5s;
  height: 40px;
  position: fixed;
  bottom: 20px;
  right: 15px;
  transform: rotate(45deg);
}

.close {
  transition: all 0.5s;
  height: 40px;
  position: fixed;
  bottom: 20px;
  right: 15px;
}

.add_list_on {
  transition: all 0.5s;
  pointer-events: auto;
  opacity: 1;
  position: fixed;
  bottom: 80px;
  right: 15px;
}

.add_list_off {
  transition: all 0.5s;
  position: fixed;
  opacity: 0;
  bottom: 30px;
  right: 15px;
  pointer-events: none;
}

.add_item {
  position: relative;
  background-color: #dacdeb;
  border-radius: 50%; 
  margin-bottom: 5px;
  height: 40px;
  width: 40px;
  background-size: 26px 26px;
  background-position: 7px 7px;
  background-repeat: no-repeat;
}

.add_item:nth-child(1) {
  background-image: url(http://tony-space.top/static/icon/add_white.png);
}
.add_item:nth-child(1)::before {
  content: '添加课程';
  display: block;
  position: absolute;
  background-color: white;
  width: 90px;
  height: 25px;
  left: -100px;
  top: 7px;
  font-size: 14px;
  line-height: 25px;
  text-align: center;
  border-radius: 5px;
}
.add_item:nth-child(1)::after {
  content: '';
  display: block;
  position: absolute;
  background-color: white;
  width: 10px;
  height: 10px;
  left: -15px;
  top: 15px;
  transform: rotate(45deg);
}
.add_item:nth-child(2) {
  background-image: url(http://tony-space.top/static/icon/change.png);
}
.add_item:nth-child(2)::before {
  content: '周/日切换';
  display: block;
  position: absolute;
  background-color: white;
  width: 90px;
  height: 25px;
  left: -100px;
  top: 7px;
  font-size: 14px;
  line-height: 25px;
  text-align: center;
  border-radius: 5px;
}
.add_item:nth-child(2)::after {
  content: '';
  display: block;
  position: absolute;
  background-color: white;
  width: 10px;
  height: 10px;
  left: -15px;
  top: 15px;
  transform: rotate(45deg);
}
.add_item:nth-child(3) {
  background-image: url(http://tony-space.top/static/icon/trans.png);
}
.add_item:nth-child(3)::before {
  content: '分享';
  display: block;
  position: absolute;
  background-color: white;
  width: 50px;
  height: 25px;
  left: -60px;
  top: 7px;
  font-size: 14px;
  line-height: 25px;
  text-align: center;
  border-radius: 5px;
}
.add_item:nth-child(3)::after {
  content: '';
  display: block;
  position: absolute;
  background-color: white;
  width: 10px;
  height: 10px;
  left: -15px;
  top: 15px;
  transform: rotate(45deg);
}

.mask_on {
  transition: all 0.5s;
  position: absolute;
  opacity: 0.8;
  width: 100%;
  height: 100%;
  background-color: #777;
  top: 0;
}

.mask_off {
  transition: all 0.5s;
  position: absolute;
  pointer-events: none;
  width: 100%;
  height: 100%;
  opacity: 0;
  top: 0;
}

.noclass {
  text-align: center;
  font-size: 16px;
  line-height: 100px;
  color: #888;
}