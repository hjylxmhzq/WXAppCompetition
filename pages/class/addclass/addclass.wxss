/* pages/remind/addreminder/addreminder.wxss */

.content-title {
  height: 35px;
  background-color: #eee;
  position: relative;
  z-index: 2;
}

.content-seg {
  height: 20px;
  background-color: #eee;
}

.bell-img {
  height: 15px;
  width: 15px;
  margin: 4px 5px 0 20px;
  vertical-align: middle;
  position: absolute;
}

.add-img {
  height: 15px;
  width: 15px;
  margin: 10px 5px 0 80px;
  vertical-align: middle;
  position: absolute;

}

.cancel-img {
  height: 15px;
  width: 15px;
  margin: 10px 5px 0 15px;
  vertical-align: middle;
  position: absolute;
  transform: rotate(45deg);
}

.content-input {
  padding: 10px;
  height: 30px;
  width: 100%;
  font-size: 14px;
}

.title-text {
  font-size: 13px;
  padding: 10px 0 0 40px;
  display: block;
  height: 25px;
  background-image: url(http://tony-space.top/static/icon/course_black.png);
  background-size: 15px 15px;
  background-position: 15px 11px;
  background-repeat: no-repeat;
}

.lecturer-text {
  font-size: 13px;
  padding: 10px 0 0 40px;
  display: block;
  height: 25px;
  background-image: url(http://tony-space.top/static/icon/lecturer_black.png);
  background-size: 15px 15px;
  background-position: 15px 11px;
  background-repeat: no-repeat;
}

.place-text {
  font-size: 13px;
  padding: 10px 0 0 40px;
  display: block;
  height: 25px;
  background-image: url(http://tony-space.top/static/icon/locale_black.png);
  background-size: 15px 15px;
  background-position: 15px 11px;
  background-repeat: no-repeat;
}

.cancel-mark-text {
  font-size: 13px;
  margin: 8px 0 0 35px;
  vertical-align: middle;
  position: absolute;
}

.add-mark-text {
  font-size: 13px;
  margin: 8px 0 0 100px;
  vertical-align: middle;
  position: absolute;
}

.picker {
  font-size:14px;
  padding:15px;
  height:14px;
}

.picker-itemleft {
  position: absolute;
  left: 0px;
  padding-left: 20px;
  width: 100%;
}

.picker-itemright {
  position: absolute;
  right: 0px;
  padding-right: 20px;
}

.submit-button {
  width: 90%;
  left: 5%;
  position: absolute;
  bottom: 15px;
}

.class_choose_bar {
  position: relative;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  border-top: 1px solid #ddd;
  margin-top: -1px;
  z-index: 1;
}

.class_choose_bar > view {
  display: inline-block;
}

.class_choose_bar > view:nth-child(1) {
  margin-left: 20rpx;
}

.class_choose_bar > view:nth-child(2) {
  margin-left: 350rpx;
  color: #999;
}

.class_choose_bar > view:nth-child(n) {
  display: inline-block;
}

.class_time {
  position: absolute;
  display: flex;
  bottom: 0px;
  width: 100%;
  min-height: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 5%;
  background-color: white;
  font-size: 14px;
  flex-wrap: wrap;
  z-index: 4;
}

.class_time label {
  flex-basis: 25%;
  margin: 0 0 20rpx;
}

.class_week {
  position: absolute;
  display: flex;
  bottom: 100px;
  width: 95%;
  left: 5%;
  font-size: 14px;
  flex-wrap: wrap;
  z-index: 4;
}

.mask_on {
  transition: all 1s;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background-color: #ccc;
  z-index: 3; 
  opacity: 0.6;
}

.mask_off {
  transition: all 1s;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background-color: #ccc;
  pointer-events: none;
  z-index: 3; 
  opacity: 0;
}

.comfirm-button {
  width: 90%;
  margin-left: 0;
}