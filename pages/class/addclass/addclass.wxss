/* pages/remind/addreminder/addreminder.wxss */

image {
  width: 35rpx;
  margin: 0 10rpx 0 10%;
}

.content-title {
  height: 60rpx;
  background-color: #eee;
  margin: 0 auto;
  display: flex;
  align-items: center;
}

.title-text{
  font-size: 26rpx;
}

.add-img {
  margin-left: 15rpx;
}

.cancel-img {
  transform: rotate(45deg);
}

textarea.content-input {
  height: 120rpx;
}

.content-input {
  margin: 20rpx auto;
  height: 60rpx;
  width: 80%;
  font-size: 28rpx;
}

.content-title:nth-child(5) image {
  width: 30rpx;
}

.picker {
  font-size: 28rpx;
  padding: 30rpx;
  height: 30rpx;
}

.picker-itemleft {
  position: absolute;
  left: 0;
  padding-left: 40rpx;
  width: 100%;
}

.picker-itemright {
  position: absolute;
  right: 0;
  padding-right: 40rpx;
}

.submit-buttons {
  width: 90%;
  left: 5%;
  position: fixed;
  bottom: 30rpx;
}

.submit-button {
  margin-top: 20rpx;
}

.class_choose_bar {
  height: 80rpx;
  font-size: 28rpx;
  border-top: 1px solid #ddd;
  z-index: 1;
  display: flex;
  align-items: center;
  justify-content: space-between;
  width: 80%;
  margin: 0 auto;
}

.class_choose_bar:nth-child(1) {
  border-top: none;
}

.class_choose_bar > view:nth-child(2) {
  color: #999;
}

.class_time {
  position: fixed;
  display: flex;
  bottom: 0;
  width: 100%;
  min-height: 40rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  padding-left: 5%;
  background-color: white;
  font-size: 28rpx;
  flex-wrap: wrap;
  z-index: 4;
}

.class_time label {
  flex-basis: 25%;
  margin: 0 0 20rpx;
}

.class_week {
  position: absolute;
  display: flex;
  bottom: 200rpx;
  width: 95%;
  left: 5%;
  font-size: 28rpx;
  flex-wrap: wrap;
  z-index: 4;
}

.mask_on {
  transition: all 1s;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background-color: #ccc;
  z-index: 3;
  opacity: 0.6;
}

.mask_off {
  transition: all 1s;
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background-color: #ccc;
  pointer-events: none;
  z-index: 3;
  opacity: 0;
}

.comfirm-button {
  width: 90%;
  margin-left: 0;
}

.bottom_space {
  height: 300rpx;
}