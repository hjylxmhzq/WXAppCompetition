      data-teacher='{{item.teacher}}'>
      <view>{{item.name}}</view>
      <view>{{item.place}}</view>
    </view>
  </view>
  <view class="cell col4">
    <view class="date">
      <view>{{date[3]}}</view>
      <view>周四</view>
    </view>
