      data-teacher='{{item.teacher}}'>
      <view>{{item.name}}</view>
      <view>{{item.place}}</view>
    </view>
  </view>
  <view class="cell col5">
    <view class="date">
      <view>{{date[4]}}</view>
      <view>周五</view>
    </view>
    <view wx:for="{{course[4]}}" wx:key="unique" class="course" bindtap='clickClass' data-name='{{item.name}}' data-place='{{item.place}}' data-week='{{item.weekstr}}' data-uid='{{item.uid}}' data-day='{{item.daystr}}' data-time='{{item.time}}' data-mark='{{item.mark}}'
      data-teacher='{{item.teacher}}'>
      <view>{{item.name}}</view>
      <view>{{item.place}}</view>
    </view>
  </view>
</view>