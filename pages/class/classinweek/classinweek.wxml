<!--pages/class/classinweek/classinweek.wxml-->
<view class="box">
  <view class="cell col0">
    <view class="date">
      <picker bindchange="bindPickerChange" value="{{nowweek-1}}" range="{{weekArray}}">
        <view class="setting">
          <view>第 {{nowweek}} 周</view>
        </view>
      </picker>
    </view>
    <view wx:for="{{classcount}}" wx:key="unique" class="course">{{item}}</view>
  </view>
  <view class="cell col1">
    <view class="date">
      <view>{{date[0]}}</view>
      <view>周一</view>
    </view>
    <view wx:for="{{course[0]}}" wx:key="unique" class="course" bindtap='clickClass' data-name='{{item.name}}' data-place='{{item.place}}' data-week='{{item.weekstr}}' data-uid='{{item.uid}}' data-day='{{item.daystr}}' data-time='{{item.time}}' data-mark='{{item.mark}}'
      data-teacher='{{item.teacher}}'>
      <view>{{item.name}}</view>
      <view>{{item.place}}</view>
    </view>
  </view>
  <view class="cell col2">
    <view class="date">
      <view>{{date[1]}}</view>
      <view>周二</view>
    </view>
    <view wx:for="{{course[1]}}" wx:key="unique" class="course" bindtap='clickClass' data-name='{{item.name}}' data-place='{{item.place}}' data-week='{{item.weekstr}}' data-uid='{{item.uid}}' data-day='{{item.daystr}}' data-time='{{item.time}}' data-mark='{{item.mark}}'
      data-teacher='{{item.teacher}}'>
      <view>{{item.name}}</view>
      <view>{{item.place}}</view>
    </view>
  </view>
  <view class="cell col3">
    <view class="date">
      <view>{{date[2]}}</view>
      <view>周三</view>
    </view>
