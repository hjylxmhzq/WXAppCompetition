/* pages/class/classinweek/classinweek.wxss */

page {
  background:
    radial-gradient(#aaaaaa88 3px, transparent 4px),
    radial-gradient(#aaaaaa88 3px, transparent 4px),
    linear-gradient(#fff 4px, transparent 0),
    linear-gradient(45deg, transparent 74px, transparent 75px, #cccccc88 75px, #cccccc88 76px, transparent 77px, transparent 109px),
    linear-gradient(-45deg, transparent 75px, transparent 76px, #cccccc88 76px, #cccccc88 77px, transparent 78px, transparent 109px),
    #fff;
    background-size: 109px 109px, 109px 109px,100% 6px, 109px 109px, 109px 109px;
    background-position: 54px 55px, 0px 0px, 0px 0px, 0px 0px, 0px 0px;

}

.box {
  display: flex;
  width: 100%;
}

.cell {
  border-bottom: 1px solid #eee;
  flex-basis: 20%;
}

.col0 {
  flex-shrink: 2;
}

.course {
  border: 1px solid #ddd;
  font-size: 14px;
  padding: 25rpx;
  height: 130rpx;
  border-radius: 15rpx;
  margin: 5rpx 2rpx;
  text-align: center;
}

.course > view:first-child {
  height: 80rpx;
  margin-bottom: 10rpx;
}

.course > view:last-child {
  font-size: 10px;
  height: 40rpx;
  color: #888;
}

.date {
  text-align: center;
  height: 75rpx;
}

.date > view:first-child {
  font-size: 14px;
}

.date > view:last-child {
  font-size: 12px;
  color: #888;
}

.col0 > .course {
  line-height: 130rpx;
  border-radius: 0;
  font-size: 16px;
}

.col0 > .date {
  font-size: 14px;
  color: #888;
  line-height: 75rpx;
}