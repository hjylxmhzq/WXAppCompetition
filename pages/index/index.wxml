<!--pages/index/index.wxml-->
<view class="container">
  <view class="today-remind">
    <view class="today-date">
      <image mode="widthFix" src="/icon/calendar.png"></image>
      <text>{{todayDate}}</text>
      <text>今日提醒</text>
    </view>
    <view class="line"></view>
    <swiper indicator-dots="true" indicator-color="#ffffff33" indicator-active-color="#fff" autoplay="true" >
      <swiper-item wx:for="{{remindArray}}">



      </swiper-item>
    </swiper>
  </view>






  <view class="add">
    <icon type="clear" size="40" color="rgb(100,100,100)" bindtap='add' />
  </view>
  <view class="{{add_list}}">
    <view class="add_item" bindtap="addreminder">
      <image style="width: 30px; height: 30px; padding: 5px;" src="{{'/icon/add.png'}}"></image>
    </view>
    <view class="add_item">
      <image style="width: 30px; height: 30px; padding: 5px;" src="{{'/icon/change.png'}}"></image>
    </view>
    <view class="add_item">
      <image style="width: 30px; height: 30px; padding: 5px;" src="{{'/icon/trans.png'}}"></image>
    </view>
  </view>
</view>