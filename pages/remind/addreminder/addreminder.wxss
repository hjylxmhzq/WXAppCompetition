/* pages/remind/addreminder/addreminder.wxss */

page {
  background: radial-gradient(#aaaaaa88 3px, transparent 4px),
                radial-gradient(#aaaaaa88 3px, transparent 4px),
                linear-gradient(#fff 4px, transparent 0),
                linear-gradient(45deg, transparent 74px, transparent 75px, #cccccc88 75px, #cccccc88 76px, transparent 77px, transparent 109px),
                linear-gradient(-45deg, transparent 75px, transparent 76px, #cccccc88 76px, #cccccc88 77px, transparent 78px, transparent 109px),
                #fff;
  background-size: 109px 109px, 109px 109px, 100% 6px, 109px 109px, 109px 109px;
  background-position: 54px 55px, 0px 0px, 0px 0px, 0px 0px, 0px 0px;
}

image {
  width: 35rpx;
  margin: 0 10rpx 0 10%;
}

.content-title {
  height: 60rpx;
  background-color: #eee;
  margin: 0 auto;
  display: flex;
  align-items: center;
  z-index: 2;
}

.title-text {
  font-size: 26rpx;
}

.add-img {
  margin-left: 15rpx;
}

.cancel-img {
  transform: rotate(45deg);
}

textarea.content-input {
  height: 120rpx;
}

.content-input {
  margin: 20rpx auto;
  height: 60rpx;
  width: 80%;
  font-size: 28rpx;
}

.picker {
  height: 80rpx;
  font-size: 28rpx;
  border-top: 1px solid #ddd;
  display: flex;
  flex-flow: row nowrap;
  align-items: center;
  justify-content: space-between;
  width: 80%;
  margin: 0 auto;
}

picker:nth-child(1) .picker {
  border-top: none;
}

.submit-buttons {
  width: 90%;
  left: 5%;
  position: absolute;
  bottom: 30rpx;
}

.submit-button {
  margin-top: 20rpx;
}
